Subject: [PATCH][BUILD] Improves HTML detection.


Signed-off-by: Sean Russell <ser@ser1.net>
---
 app/views/wiki/edit.html.erb |   10 +++++-----
 1 file changed, 5 insertions(+), 5 deletions(-)

diff --git a/app/views/wiki/edit.html.erb b/app/views/wiki/edit.html.erb
index 25955d1..7a68121 100644
--- a/app/views/wiki/edit.html.erb
+++ b/app/views/wiki/edit.html.erb
@@ -55,12 +55,12 @@ Aloha.ready( function() {
 	$('#editor').aloha();
 
 	$('#save').click(function(){
-		payload = $("#editor").html();
-		a = payload("#aloha-flag");
-		if (a === nil) {
-			payload.append("<div visibility='hidden' id='aloha-flag'></div>");
+		payload = $("#editor");
+		a = jQuery("#aloha-flag", payload);
+		if (a.html() === null) {
+			payload.append("<div style='visibility: hidden; display: none;' id='aloha-flag'></div>");
 		}
-		$("#payload").attr("value", payload);
+		$("#payload").attr("value", payload.html());
 		$("#wiki_form").submit(); 
 	});
 });
